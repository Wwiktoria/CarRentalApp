@model IEnumerable<CarRentalApp.Models.DbModels.CarModel>

@{
    ViewBag.Title = "Index";
}

<h2>Models</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarBrandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModelName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarBrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModelName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CarModelId }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.CarModelId }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.CarModelId })
            </td>
        </tr>
    }

</table>
